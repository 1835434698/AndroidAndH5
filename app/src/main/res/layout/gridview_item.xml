<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/gridView_item"
    android:layout_width="wrap_content"
    android:layout_height="110dp"
    android:paddingBottom="30dp"
    android:background="@drawable/gridview_item_selector"
    >
    <ImageView
        android:id="@+id/iv_userfragment_itemimage"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/iv_griview_item"
        />
	<TextView
	    android:id="@+id/tv_userfragment_itemname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_userfragment_itemimage"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:text="第一"
        android:textSize="13sp"
        android:textColor="#3a3a39"
        />
</RelativeLayout>